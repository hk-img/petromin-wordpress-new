# BEGIN WordPress
# The directives (lines) between "BEGIN WordPress" and "END WordPress" are
# dynamically generated, and should only be modified via WordPress filters.
# Any changes to the directives between these markers will be overwritten.
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
# UPDATE THIS PATH FOR YOUR LIVE SERVER
# If your site is at root: RewriteBase /
# If your site is in a subfolder: RewriteBase /petromin/
RewriteBase /petromin/
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# UPDATE THIS PATH TO MATCH YOUR SERVER STRUCTURE
# If at root: RewriteRule . /index.php [L]
# If in subfolder: RewriteRule . /petromin/index.php [L]
RewriteRule . /petromin/index.php [L]
</IfModule>

# END WordPress

# Additional security and performance settings
<IfModule mod_headers.c>
    # Security headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Increase PHP memory limit (if allowed)
<IfModule mod_php.c>
    php_value memory_limit 256M
    php_value max_execution_time 300
</IfModule>

